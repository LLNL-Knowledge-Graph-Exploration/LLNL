<style>
  body {
    background-color: #f4f4f8;
  }
  form {
    background-color: #ffffff;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    width: 400px;
    margin: 0 auto;
    padding: 30px;

  }
  .field {
    margin-bottom: 20px;
  }
  .heading {
    background-color: #333;
    width: 100%;
    margin-top: 0px;
    color: #fff;
    padding: 20px;
    font-family: 'Montserrat', sans-serif; /* Added a stylish font for the heading */
    text-align: center; /* Center align the text */
    letter-spacing: 2px; /* Adjust letter spacing for a modern look */
  }
  .field label {
    font-family: 'Roboto', sans-serif;
    color: #555;
    font-size: 18px;
    display: block;
    text-align: left;
    margin-bottom: 5px;
  }
  input[type="text"],
  input[type="email"] {
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    border: 1.5px solid #ccc;
    border-radius: 4px;
  }
  input[type="submit"] {
    background-color: #333;
    color: #fff;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
  }
  input[type="submit"]:hover {
    background-color: #555;
  }
  .forgotpwd-text {
    font-size: 24px;
    font-weight: bold; 
    color: #333;
    text-align: center;
    margin-bottom: 20px;
    font-family: 'Roboto', sans-serif; /* Use Roboto font for login text */
  }

</style>
<h1 class="heading">Subgraph Visualization </h1>
<br> <br> <br> <br> <br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="forgotpwd-text">Forgot your password?</div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
